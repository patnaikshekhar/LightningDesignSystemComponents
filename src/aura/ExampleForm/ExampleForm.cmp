<aura:component access="GLOBAL">
	<c:LightningDesignApplication >
        <h1 class="slds-text-heading--medium">Horizontal Form</h1>
        <c:form >
            <c:input label="Text Input" placeholder="Placeholder Text" />
            <c:textarea label="Textarea Label" />
            <c:checkboxes groupLabel="Checkbox Group label" labels="All opportunities owned by you,All contacts in the account owned by you" />
            <c:radioButtons name="opts" label="Radio Group label" options="Lead Generation,Education Leads" />
        </c:form>
        
        <h1 class="slds-text-heading--medium">Stacked Form</h1>
        <c:form type="stacked">
            <c:input label="Text Input" placeholder="Placeholder Text" />
            <c:textarea label="Textarea Label" />
            <c:checkboxes groupLabel="Checkbox Group label" labels="All opportunities owned by you,All contacts in the account owned by you" />
            <c:radioButtons name="opts" label="Radio Group label" options="Lead Generation,Education Leads" />
        </c:form>
        
        <h1 class="slds-text-heading--medium">Inline Form</h1>
        <c:form type="inline">
            <c:input label="Text Input" placeholder="Placeholder Text" />
            <c:checkboxes groupLabel="Checkbox Group label" labels="All opportunities owned by you,All contacts in the account owned by you" />
        </c:form>
    </c:LightningDesignApplication>
</aura:component>